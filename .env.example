# ThrallUI Environment Configuration

# Optional: Log level (default: info)
# Options: error, warn, info, debug, trace
export RUST_LOG=info

# Required: Base directory whose children will be allowed
export THRALLUI_ALLOWED_DIRS=/tmp/workspace

# Optional: Path to Claude CLI (default: "claude")
export THRALLUI_CLAUDE_PATH=claude

# Optional: Maximum concurrent sessions (default: 10)
export THRALLUI_MAX_SESSIONS=10
